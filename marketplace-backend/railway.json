{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": ["jdk17", "maven"]
        },
        "build": {
          "cmds": ["mvn clean package -DskipTests"]
        }
      },
      "start": {
        "cmd": "java -Dserver.port=$PORT -jar target/marketplace-backend.jar"
      }
    }
  },
  "deploy": {
    "startCommand": "java -Dserver.port=$PORT -jar target/marketplace-backend.jar",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
